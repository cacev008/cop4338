printf("char=%lu, uchar=%lu, CHAR_MIN=%+d, CHAR_MAX=%+d,\nshort=%lu, ushort=%lu,SHRT_MIN=%+d, SHRT_MAX=%+d\nint=%lu, uint=%lu, INT_MIN=%+d,INT_MAX=%+d,\nlong=%lu, ulong=%lu, LONG_MIN=+%ld, LONG_MAX=+%ld, sizeof(c), sizeof(uc), CHAR_MIN, CHAR_MAX, sizeof(s), sizeof(us), SHRT_MIN, SHRT_MAX, sizeof(i), sizeof(ui), INT_MIN, INT_MIN, sizeof(l), sizeof(ul), LONG_MIN, LONG_MAX, sizeof(ll), sizeof(ull), sizeof(f), sizeof(double));
